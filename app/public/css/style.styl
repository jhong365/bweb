	.logo {
		background transparent url("http://dwr3ey32gvch4.cloudfront.net/logo/LOGONEW.png") no-repeat top left
		float: left
		width: 91px
		height: 24px
		text-indent: -3000px
		margin: 11px 10px 12px 0
	}	
	
	.main-nav {
		float right
		font 700 12px/25px 'Lato', Helvetica, sans-serif
		color #e5e5e5
		.main-nav-guest 
		{
			margin-right: -30px		
		}	
	}
	
	.main-nav>ul>li {
		float: left
		position: relative
	}
	
	.main-nav>ul>li>a {
		display block
		position relative
		background transparent	url("//d2nt7j7ljjsiah.cloudfront.net/assets/v2_backgrounds/bg-main-header-user-79cf142fe9e8b3af75c77db328f8259e.png")repeat-x left -1000px
		color #e5e5e5
		text-decoration none
		padding 0 30px
		line-height 47px
		text-transform uppercase
	}
	
	 .main-nav>ul>li>a.btn-green {
		background-color #00b22d
		padding 0 6px
		margin 14px 30px
		line-height 19px
		color #0e0e0f
		-webkit-border-radius 4px
		-moz-border-radius 4px
		border-radius 4px
	}
}

